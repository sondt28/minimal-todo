<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
        <style name="Base.Theme.MinimalTodo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
            <!--        Primary brand color-->
            <item name="colorPrimary">@color/colorPrimary</item>
            <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
            <item name="colorOnPrimary">@color/white</item>
            <!--        Secondary brand color-->
            <item name="colorSecondary">@color/colorSecondary</item>
            <item name="colorSecondaryVariant">@color/colorPrimaryVariant</item>
            <item name="colorOnSecondary">@color/white</item>

            <item name="android:colorControlNormal">@color/black</item>
            <item name="colorControlNormal">@color/black</item>
    <!--        Status bar color-->
            <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        </style>

<!--    Light mode-->


    <style name="Theme.MinimalTodo" parent="Base.Theme.MinimalTodo" />
    
    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash_screen</item>
        <item name="android:statusBarColor">@color/colorPrimaryVariant</item>
    </style>

</resources>